<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.frags.LandingFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_houses_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/house_item" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/houses_progress_bar"
        android:visibility="gone"
        tools:visibility="visible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:id="@+id/houses_loading_tv"
        android:visibility="gone"
        tools:visibility="visible"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/houses_progress_bar"
        app:layout_constraintStart_toStartOf="@id/houses_progress_bar"
        app:layout_constraintEnd_toEndOf="@id/houses_progress_bar"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/no_items"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/no_items_iv_houses"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="@string/no_items_yet" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_items_yet"
        android:id="@+id/no_items_tv_houses"
        android:visibility="gone"
        tools:visibility="visible"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/no_items_iv_houses"
        app:layout_constraintStart_toStartOf="@id/houses_progress_bar"
        app:layout_constraintEnd_toEndOf="@id/houses_progress_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>